<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center" android:background="@drawable/round_box"
    android:orientation="vertical" android:layout_width="200dp"
    android:layout_height="wrap_content">

    <TextView
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textSize="20dp"
        android:text="test"
        android:background="@color/colorSeparator"
        android:textColor="@color/colorWhite"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:id="@+id/alertSubwayName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="15dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorWhite"
            android:text="출발"
            android:background="@color/alertStart"
            android:id="@+id/alertSubwayStart"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:textSize="15dp"
            android:text="정보"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorWhite"
            android:background="@color/alertInfo"
            android:id="@+id/alertSubwayInfo"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:textSize="15dp"
            android:text="도착"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorWhite"
            android:background="@color/alertEnd"
            android:id="@+id/alertSubwayEnd"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>