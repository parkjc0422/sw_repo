<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.SubwayMapActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioGroup
                android:id="@+id/mapTypeGroup"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RadioButton
                    android:id="@+id/mapTypeRoute"
                    android:checked="true"
                    android:fontFamily="sans-serif"
                    android:layout_weight="1"
                    android:text="경로 안내"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            <RadioButton
                    android:id="@+id/mapTypeInfo"
                    android:fontFamily="sans-serif"
                    android:text="지하철 정보"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
        </RadioGroup>
    </LinearLayout>
    <Button
            android:text="경로 탐색"
            android:id="@+id/searchRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <WebView
            android:layout_weight="1"
            android:id="@+id/subwayMap"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:textSize="15dp"
                    android:fontFamily="sans-serif"
                    android:text="출발"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/subwayFrom"
                    android:textSize="15dp"
                    android:fontFamily="sans-serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:textSize="15dp"
                    android:fontFamily="sans-serif"
                    android:text="도착"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/subwayTo"
                    android:textSize="15dp"
                    android:fontFamily="sans-serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>